@model IEnumerable<Prodects>

@{
    ViewData["Title"] = "All Prodect";
}

<h1>All Prodects</h1>

<a asp-action="CreateProdect" asp-controller="Prodect" class="btn btn-primary btn-sm">Create new Prodect</a>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(Modelitem=>Modelitem.ProdectName)
        </th>
        <th>
            @Html.DisplayNameFor(Modelitem=>Modelitem.Description)
        </th>

        <th>
            @Html.DisplayNameFor(Modelitem=>Modelitem.Category!.CategoreyName)
        </th>


        <th>

            Operations
        </th>
    </tr>
    @foreach (var Pro in Model)
    {
        <tr>
            <td>@Pro.ProdectName </td>
            <td>@Pro.Description </td>
            <td>
                @Html.DisplayNameFor(Modelitem=>Pro.Category!.CategoreyName)
            </td>
            <td>
                <a asp-route-id="@Pro.ProdectId" asp-action="EditProdects" asp-controller="Prodect" class="btn btn-outline-danger brn-sm ">Edit</a>

                <a asp-route-id="@Pro.ProdectId" asp-action="Details" asp-controller="Prodect" class="btn btn-outline-info brn-sm ">Details</a>

                <a asp-route-id="@Pro.ProdectId" asp-action="Delete" asp-controller="Prodect" class="btn btn-outline-secondary brn-sm ">Delete</a>


            </td>
        </tr>


    }
</table>