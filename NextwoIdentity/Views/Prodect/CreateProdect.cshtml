@model Prodects
@{
    ViewData["Title"] = "CreateProdect";
}

<h1>Create New Prodects</h1>

<form method="post" asp-action="CreateProdect">

    
    <table class="table table-bordered">
        <tr>
            <td><label asp-for="ProdectName"></label></td>
            <td>
                <input asp-for="ProdectName" class=" form-control" placeholder="Enter Your name" />
                <span asp-validation-for="ProdectName" class="text-danger"></span>
            </td>

        </tr>
        <tr>
            <td><label asp-for="Description"></label></td>
            <td>
                <input asp-for="Description" class=" form-control" placeholder="Enter Your name" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </td>

        </tr>
      
        <tr>
            <td><label asp-for="Category!.CategoreyName"></label></td>
            <td>
                <select asp-for="Category!.CategoreyName" asp-items="ViewBag.AllPro" class=" form-control" />

                <span asp-validation-for="Category!.CategoreyName" class="text-danger"></span>
            </td>

        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" class="btn btn-primary" value="Create" />

            </td>

        </tr>
    </table>


</form>