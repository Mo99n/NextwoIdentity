@model NextwoIdentity.Models.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>

<h4>EditRoleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input asp-for="RoleId"  readonly class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />

                <a asp-action="RolesList" asp-controller="Account">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="card"
    <div class="card-header">
        Users In this role
    </div>
    <div class="card-body">
        @if(Model.Users!.Any()!){
            @foreach (var user in Model.Users!)
            {
                @user <br />
            }
        }
        else
        {
            <span class="alert alert-danger"> No user </span>
        }
        <div class="card-footer">
            < a asp-action="" asp-controller="" asp-route-id="@Model.RoleId" >
            Add/Remove Users
        
        </a>


        </div>
    </div>


 </div>