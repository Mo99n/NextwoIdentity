@model NextwoIdentity.Models.ViewModels.Category

@{
    ViewData["Title"] = "CreateCategory";
}

<h1>CreateCategory</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoreyName" class="control-label"></label>
                <input asp-for="CategoreyName" class="form-control" />
                <span asp-validation-for="CategoreyName" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllCategory">Back to All Category </a>
</div>

